# !!! This file is managed by dotfiles in VCS
# Please make your local changes to ~/.gitconfig_local

[alias]
    s = status
    au = add -u
	aa = add --all :/
    c = commit
	ci = commit -v
	ca = commit --amend -v
	save = commit -a -m "Save"
	count = diff --stat "4b825dc642cb6eb9a060e54bf8d69288fbee4904" # hash of empty tree
	update-submodules = submodule update --init --recursive
	upgrade-submodules = submodule update --init --remote
	empty-tree-hash = hash-object -t tree /dev/null
	root = rev-parse --show-toplevel

[init]
	defaultBranch = main

[commit]
	# Put the commit diff in the text editor when writing commit messages
	verbose = true

[push]
	# default to push to a remote branch of the same name as the local branch
	default = simple
	# ...and create a remote branch if it does not already exist
    autoSetupRemote = true
	# push local tags along with any pushes to remote
	followTags = true

[fectch]
	# delete local branches that are deleted in remote
	prune = true
	# delete local tags that are deleted in remote
	pruneTags = true
	# fetch all remotes
	all = true

[branch]
    sort = -committerdate

[tag]
	sort = version:refname

[diff]
	colorMoved = plain
	mnemonicPrefix = true
	rename = true
	algorithm = histogram

[rerere]
	# Record a confict resolution during rebase
	enabled = true
	# ...and automatically reapply the resolution on subsequent commits
	autoupdate = true

[merge]
	# Show what the block look like before either changes in a merge conflict
	confictStyle = zdiff3

[include]
	path = ~/.gitconfig_local